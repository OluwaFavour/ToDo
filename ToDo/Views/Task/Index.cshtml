@model IEnumerable<ToDo.Models._Task>
@{
    ViewData["Title"] = "Tasks";
}

<div class="jumbotron">

    <a class="btn btn-primary rounded-sm float-right mt-n4" asp-action="Add">Add New Task</a>
    <br />
    <hr />

    @if (Model.Count() == 0)
    {
        <h3 class="display-4 pt-2">You have no undone tasks.</h3>
    }
    else
    {
        foreach (var task in Model)
        {
            <h3>@task.Title</h3>
            <p class="text-secondary">@task.DateCreated</p>
            <hr />
        }
    }

</div>